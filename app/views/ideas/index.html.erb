<h1>Listing ideas</h1>

<div>
  <% @ideas.each do |idea| %>
  <h2>Name</h2>
    <p><%= idea.name %></p>
  <h2>Description</h2>
    <p> <%= idea.description %> </p>
  <h2>Picture</h2>
    <p><%= image_tag(idea.picture_url, :width => 200) if idea.picture.present? %></p>
    <p><%= link_to 'Show', idea %>  <%= link_to 'Edit', edit_idea_path(idea) %>  <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>  </p>
  
  <% end %>

<%= link_to 'New Idea', new_idea_path %>
 </div>
    
 


